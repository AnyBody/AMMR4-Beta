      AnyFolder Radius    = { AnyVar MassScale = ...AnthroDataSubjectRef.AnthroData.lower_arm_r / (2*...StandardParameters.Ulna.Mass);  };
      AnyFolder Hand      = { AnyVar MassScale = ...AnthroDataSubjectRef.AnthroData.hand_r / ...StandardParameters.Hand.Mass; };    
	  AnyFolder Foot = { AnyVar MassScale = (...AnthroDataSubjectRef.AnthroData.Right.foot + ...AnthroDataSubjectRef.AnthroData.Right.ball) / ...StandardParameters.Right.Foot.Mass; };
      AnyFolder Talus = { AnyVar MassScale = ...AnthroDataSubjectRef.AnthroData.Right.talus / ...StandardParameters.Right.Talus.Mass; };  
      AnyFolder Shank = { AnyVar MassScale = ...AnthroDataSubjectRef.AnthroData.Right.lower_leg / ...StandardParameters.Right.Shank.Mass; };
      AnyFolder Thigh = { AnyVar MassScale = ...AnthroDataSubjectRef.AnthroData.Right.thigh / ...StandardParameters.Right.Thigh.Mass; };  
    };
    AnyFolder Left = 
    {
      AnyFolder Clavicula = { AnyVar MassScale = (...AnthroDataSubjectRef.AnthroData.clavicle_l ) / (...StandardParameters.Clavicula.Mass + ...StandardParameters.Scapula.Mass); };   
      AnyFolder Scapula   = { AnyVar MassScale = (...AnthroDataSubjectRef.AnthroData.clavicle_l ) / (...StandardParameters.Clavicula.Mass + ...StandardParameters.Scapula.Mass); };       
      AnyFolder Humerus   = { AnyVar MassScale = ...AnthroDataSubjectRef.AnthroData.upper_arm_l / ...StandardParameters.Humerus.Mass; };
      AnyFolder Ulna      = { AnyVar MassScale = ...AnthroDataSubjectRef.AnthroData.lower_arm_l / (2*...StandardParameters.Ulna.Mass); };
      AnyFolder Radius    = { AnyVar MassScale = ...AnthroDataSubjectRef.AnthroData.lower_arm_l / (2*...StandardParameters.Ulna.Mass);  };
      AnyFolder Hand      = { AnyVar MassScale = ...AnthroDataSubjectRef.AnthroData.hand_l / ...StandardParameters.Hand.Mass; };    
	  
